<%- include('partials/header') %>
<main class="container">
  <section class="hero">
    <div class="hero-slider">
      <% products.forEach((product, i) => { %>
      <div class="slide <%= i === 0 ? 'active' : '' %>">
        <img src="<%= product.images[0] %>" alt="<%= product.title %>" />
        <div class="slide-text">
          <h2><%= product.title %></h2>
          <p>₾<%= product.price %></p>
          <a href="/product/<%= product.slug %>" class="btn"
            ><%= t.hero.buyNow %></a
          >
        </div>
      </div>
      <% }) %>
      <button class="carousel-btn prev" id="slider-prev">&#10094;</button>
      <button class="carousel-btn next" id="slider-next">&#10095;</button>
    </div>

    <a href="#filter" class="btn btn-scroll"><%= t.hero.viewCollection %></a>
  </section>
  <section id="filter" class="filter-bar">
    <button id="filter-toggle" class="filter-btn">ფილტრი ▾</button>
    <div id="filter-menu" class="filter-menu">
      <button class="filter-btn active" data-category="all">
        <%= t.filter.all %>
      </button>
      <button class="filter-btn" data-category="jackets">
        <%= t.filter.jackets %>
      </button>
      <button class="filter-btn" data-category="shirts">
        <%= t.filter.shirts %>
      </button>
      <button class="filter-btn" data-category="sweaters">
        <%= t.filter.sweaters %>
      </button>
      <button class="filter-btn" data-category="headwear">
        <%= t.filter.headwear %>
      </button>
      <button class="filter-btn" data-category="shoes">
        <%= t.filter.shoes %>
      </button>
    </div>
  </section>

  <section id="products" class="products-flex">
    <% if (products.length === 0) { %>
    <p class="muted">No products yet. Add items to data/products.json.</p>
    <% } %> <% products.forEach(product => { %>
    <article class="product-card" data-category="<%= product.category %>">
      <a href="/product/<%= product.slug %>">
        <div class="img-wrap">
          <img
            src="<%= product.images[0] || '/placeholder.jpg' %>"
            alt="<%= product.title %>"
          />
        </div>
        <h3><%= product.title %></h3>
        <p class="price">₾<%= product.price %></p>
      </a>
    </article>
    <% }) %>
  </section>
</main>
<%- include('partials/footer') %>
