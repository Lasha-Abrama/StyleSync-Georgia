<%- include('partials/header') %>
<main>
  <section class="about-page fade-in">
    <h2><%= t.aboutPage.title %></h2>
    <p><%= t.aboutPage.description %></p>

    <div class="contact-section">
      <h3><%= t.aboutPage.contactSection.title %></h3>
      <p><%= t.aboutPage.contactSection.contactText %></p>

      <form class="contact-form" action="/contact" method="POST">
        <label for="name"><%= t.aboutPage.contactSection.form.nameLabel %></label>
        <input
          id="name"
          name="name"
          type="text"
          placeholder="<%= t.aboutPage.contactSection.form.namePlaceholder %>"
          required
        />

        <label for="email"><%= t.aboutPage.contactSection.form.emailLabel %></label>
        <input
          id="email"
          name="email"
          type="email"
          placeholder="<%= t.aboutPage.contactSection.form.emailPlaceholder %>"
          required
        />

        <label for="message"><%= t.aboutPage.contactSection.form.messageLabel %></label>
        <textarea
          id="message"
          name="message"
          placeholder="<%= t.aboutPage.contactSection.form.messagePlaceholder %>"
          required
        ></textarea>

        <button type="submit" class="btn"><%= t.aboutPage.contactSection.form.submitBtn %></button>
      </form>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
